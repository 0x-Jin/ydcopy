Route::group(['middleware' => ['api']], function () {
    Route::any('/test', 'TestController@index');
    
    Route::any('/api', function(){

        $req = request();
		/*
        $visitorInfo = [
            'ip'    => $req->getClientIp(),
            'host'  => $req->getHttpHost(),
